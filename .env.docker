# ========================================
# CONFIGURATION DOCKER - PROJET STAGE
# ========================================
# Copiez ce fichier en .env pour personnaliser votre environnement
# cp .env.docker .env

# ========================================
# MYSQL DATABASE
# ========================================
MYSQL_ROOT_PASSWORD=root_password_secure
MYSQL_DATABASE=agenda_db
MYSQL_USER=agenda_user
MYSQL_PASSWORD=agenda_pass_secure
MYSQL_PORT=3306

# ========================================
# PHPMYADMIN
# ========================================
PHPMYADMIN_PORT=8080

# ========================================
# SYMFONY BACKEND
# ========================================
BACKEND_PORT=8000
APP_ENV=dev
APP_SECRET=ChangeThisSecretKeyToSomethingRandomAndSecure

# JWT Configuration
JWT_SECRET_KEY=%kernel.project_dir%/config/jwt/private.pem
JWT_PUBLIC_KEY=%kernel.project_dir%/config/jwt/public.pem
JWT_PASSPHRASE=your_jwt_passphrase_here

# CORS
CORS_ALLOW_ORIGIN=http://localhost:5173

# Messenger
MESSENGER_TRANSPORT_DSN=doctrine://default?auto_setup=0

# ========================================
# REACT FRONTEND
# ========================================
FRONTEND_PORT=5173
VITE_API_URL=http://localhost:8000

# ========================================
# DOCKER USER (Linux/Mac uniquement)
# ========================================
# Pour éviter les problèmes de permissions, utilisez les mêmes UID/GID que votre utilisateur
# Sur Linux/Mac, exécutez: id -u (pour USER_ID) et id -g (pour GROUP_ID)
# Sur Windows, laissez les valeurs par défaut
USER_ID=1000
GROUP_ID=1000
